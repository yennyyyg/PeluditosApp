<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Deseas_adoptar">

    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="651dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            app:srcCompat="@drawable/mariposa" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deseas adoptar un: "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chb_perro"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D37F7F"
                android:text="CANINO" />

            <CheckBox
                android:id="@+id/chb_gato"
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="FELINO" />
        </LinearLayout>

        <ListView
            android:id="@+id/list_view_peluditos"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:background="@color/yellow"
            android:cacheColorHint="@color/black" />

        <Button
            android:id="@+id/btn_refrescar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:minHeight="48dp"
            android:text="VER LISTA"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_adoptargatosyenny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:minHeight="48dp"
            android:text="ADOPTAME"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>