<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formulario_adoptarperros">
    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="685dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="156dp"
                android:layout_height="102dp"
                app:srcCompat="@drawable/pet" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/happy" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DILIGENCIA ESTE FORMULARIO PARA QUE PUEDAS ADOPTAR A UN PERRITO!"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_usernameperros"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Nombre completo persona a cargo "
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/txtcedulaperros"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:ems="10"
            android:hint="Cedula "
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/editTextPhoneperros"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:ems="10"
            android:hint="Celular"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/txtbarrioperros"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Direccion de donde vives"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText

            android:id="@+id/textnumeromascotasperros"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:hint="¿Cuantas mascotas tienes?"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/txttrabajoperros"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:hint="¿Cuales son tus ingresos?"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/txt_porquedopcionperros"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="¿Por que quieres adoptar?"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/bt_formularioperros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EA95B2"
            android:text="ENVIAR FORMULARIO"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>